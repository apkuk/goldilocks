{
  "name": "nexus-microsite",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "npm run type-check && npm run lint"
  },
  "dependencies": {
    "next": "15.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "motion": "12.23.24",
    "@next/mdx": "16.0.0",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.0"
  },
  "devDependencies": {
    "@types/node": "22.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "typescript": "5.9.3",
    "tailwindcss": "4.0.0",
    "@tailwindcss/postcss": "4.1.16",
    "postcss": "8.4.0",
    "eslint": "9.0.0",
    "@eslint/eslintrc": "^3.0.0",
    "eslint-config-next": "16.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
